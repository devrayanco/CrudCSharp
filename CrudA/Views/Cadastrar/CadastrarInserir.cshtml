@model CadastroModel

@{
    ViewData["Title"] = "Cadastrar Funcionário";
}


<div class="container bg-dark p-5 rounded-5">
    <div class="mb-5 text-center">
        <h1 class="text-light">Cadastro de Funcionarios</h1>
    </div>
    <form method="post" asp-controller="Cadastrar" asp-action="CadastrarInserir">
        <input type="hidden" asp-for="ID"/>
        <div class="mb-3">
            <label for="Nome" class="text-light form-label">Nome:</label>
            <input type="text" class="form-control shadow-none" asp-for="Nome" id="Nome" placeholder="Quem é o Funcionário?">
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>
        <div class="mb-3">
            <label class="text-light form-label" for="Email">Email:</label>
            <input type="text" class="form-control shadow-none" asp-for="Email" id="Email" placeholder="Qual Email de cadastro?">
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="mb-3">
            <label class="text-light form-label" for="DataCadastro">DataCadastro:</label>
            <input type="date" class="form-control shadow-none" asp-for="DataCadastro" id="DataCadastro" placeholder="Qual a data de cadastro?">
            <span class="text-danger" asp-validation-for="DataCadastro"></span>
        </div>
        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50">Adicionar</button>
            <a class="btn btn-primary w-50" asp-controller="Cadastrar" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>