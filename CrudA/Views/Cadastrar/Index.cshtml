@Model IEnurable  <Cadastro>

<div class=" Container">
    <div class=" d-flex justify-content-between align-items-center mb-5">
        <h1>CADASTRO</h1>
            <a class="btn btn-success mx-2" asp-controller="Cadastrar" asp-action="CadastrarInserir">CADASTRAR NOVO FUNCIONÁRIO</a>
    </div>

        @if(TempData["MensagemSucesso"] != null)
        {
            <div class="alert alert-success text-light" role="alert">@TempData["MensagemSucesso"]</div>
        }

<table id="cadastro" class="table table-dark table-hover" style="border-radius:20px;">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nome</th>
            <th scope="col">Email</th>
            <th scope="col">Data de inclusao</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            @if (Model != null)
            {
                @foreach(var cadastro in Model)
                {
                    <tr>
                        <th scope="row">@cadastro.ID</th>
                        <td>@cadastro.Nome</td>
                        <td>@cadastro.Email</td>
                        <td>@cadastro.DataCadastro.ToString("dd/MM/yyyy")</td>
                         <td>
                            <a class="btn btn-warning mx-2" asp-controller="Cadastrar" asp-action="Editar" asp-route-id="@cadastro.ID">Editar</a>
                            <a class="btn btn-danger mx-2" asp-controller="Cadastrar" asp-action="Excluir" asp-route-id="@cadastro.ID">Excluir</a>
                        </td>
                    </tr>
                }

            }
    </tbody>
</table>
</div>
